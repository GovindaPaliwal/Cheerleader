<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="fr.tvbarthel.simplesoundcloud.library">

    <uses-permission android:name="android.permission.WAKE_LOCK" />

    <application
        android:allowBackup="true"
        android:label="@string/app_name">

        <!-- Content Provider used to access offline storage !-->
        <provider
            android:name=".offline.OfflinerProvider"
            android:authorities="fr.tvbarthel.simplesoundcloud.library.SoundCloud.OfflineProvider"
            android:exported="false" />

        <!-- Service used for music playback !-->
        <service
            android:name=".player.SimpleSoundCloudPlayer"
            android:exported="false" />

    </application>

</manifest>
